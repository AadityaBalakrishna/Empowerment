@Autowired
private org.springframework.context.ApplicationContext applicationContext;

@Test
public void printBeansAndSourceFiles() {
    System.out.println("====== BEAN SOURCE REPORT ======");
    
    var factory = (org.springframework.beans.factory.config.ConfigurableListableBeanFactory) 
                  applicationContext.getAutowireCapableBeanFactory();

    String[] beanNames = applicationContext.getBeanDefinitionNames();
    java.util.Arrays.sort(beanNames);

    for (String beanName : beanNames) {
        try {
            var bd = factory.getBeanDefinition(beanName);
            String source = bd.getResourceDescription(); 
            if (source == null) source = "Auto-generated/Internal";
            
            System.out.printf("Bean: %-50s | Source: %s%n", beanName, source);
        } catch (Exception e) {
            // Bean might be a manual singleton without a definition
        }
    }
    System.out.println("================================");
}
