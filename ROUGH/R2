package com.empower.epw.crm.gateway.web.controller;

import org.junit.jupiter.api.Test;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.boot.autoconfigure.ImportAutoConfiguration;
import org.springframework.boot.test.context.SpringBootTest;
import org.springframework.test.context.ActiveProfiles;

import com.empower.epw.crm.gateway.CrmGatewayApplication;
import com.empower.epw.sqs.config.EmpowerSQSConfig;

import static org.assertj.core.api.Assertions.assertThat;

@SpringBootTest(webEnvironment = SpringBootTest.WebEnvironment.RANDOM_PORT, classes = CrmGatewayApplication.class)
@ActiveProfiles("test")
class SsmControllerTest
{

	@Value("${scaffold.test.secret}")
	private String scaffoldTestSecret;

	@Value("${ace.api.baseurl}")
	private String scaffoldTestKey;

	@Test
	void testSsmAndConfigStoreConnectivity()
	{
		assertThat(scaffoldTestSecret).isNotNull()
				.isNotEmpty();
		assertThat(scaffoldTestKey).isNotNull()
				.isNotEmpty();
	}
}
