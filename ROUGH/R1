package com.empower.epw.aws.service.config;

import com.amazonaws.services.kms.AWSKMS;
import com.empower.epw.aws.api.kms.EpwKmsService;
import org.junit.jupiter.api.Nested;
import org.junit.jupiter.api.Test;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.test.context.SpringBootTest;
import org.springframework.test.context.TestPropertySource;
import software.amazon.awssdk.services.kms.KmsClient;

import static org.assertj.core.api.Assertions.assertThat;

public class EpwAwsKmsAutoConfigIT {

    @Nested
    @SpringBootTest
    class DefaultV1ConfigTest {

        @Autowired
        private EpwKmsService epwKmsService;

        @Autowired
        private AWSKMS awsKms;

        @Test
        void shouldLoadV1BeansByDefault() {
            assertThat(epwKmsService).isNotNull();
            assertThat(awsKms).isNotNull();
            assertThat(epwKmsService.getClass().getName())
                .isEqualTo("com.empower.epw.sdk.v1.adapter.kms.EpwKmsServiceImpl");
        }
    }

    @Nested
    @SpringBootTest(properties = "epw.aws.kms.sdk.version=v1")
    class ExplicitV1ConfigTest {

        @Autowired
        private EpwKmsService epwKmsService;

        @Autowired
        private AWSKMS awsKms;

        @Test
        void shouldLoadV1BeansWhenSetExplicitly() {
            assertThat(epwKmsService).isNotNull();
            assertThat(awsKms).isNotNull();
            assertThat(epwKmsService.getClass().getName())
                .isEqualTo("com.empower.epw.sdk.v1.adapter.kms.EpwKmsServiceImpl");
        }
    }

    @Nested
    @SpringBootTest(properties = "epw.aws.kms.sdk.version=v2")
    class V2ConfigTest {

        @Autowired
        private EpwKmsService epwKmsService;

        @Autowired
        private KmsClient kmsClient;

        @Test
        void shouldLoadV2BeansWhenPropertySet() {
            assertThat(epwKmsService).isNotNull();
            assertThat(kmsClient).isNotNull();
            assertThat(epwKmsService.getClass().getName())
                .isEqualTo("com.empower.epw.sdk.v2.adapter.kms.EpwKmsServiceImpl");
        }
    }
}
