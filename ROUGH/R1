package com.personalcapital.config;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;

@Configuration
public class PropertiesLoader
{
	private static final String[] MODULES =
	{
			"application"
	};
	private static final String[] LOCAL_MODULES =
	{
			"application-override.properties"
	};

	@Bean
	public static SafePageConfigurer safePageConfigurer() throws Exception
	{

		return SafePageConfigurer.getSafePageConfigurerForEks(MODULES, LOCAL_MODULES, "pcap");
	}
}
